<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/loading_view"
              android:layout_width="match_parent"
              android:layout_height="@dimen/adapter_h"
              android:gravity="center"
              android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="@dimen/adapter_pro_wh"
        android:layout_height="@dimen/adapter_pro_wh"
        android:layout_marginRight="@dimen/adapter_pro_m"
        android:indeterminateDrawable="@drawable/progress_gear"
        />

    <TextView
        android:id="@+id/loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/adapter_pro_m"
        android:textColor="@android:color/black"
        android:text="@string/loading"
        android:textSize="@dimen/text_size_small" />
</LinearLayout>