<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="@dimen/height_56">

        <RelativeLayout
            android:id="@+id/home_layout"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/home_image"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/home_hui" />

                <TextView
                    android:id="@+id/home_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/home"
                    android:textColor="@color/color_8a8a8a"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/joke_layout"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/joke_image"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/joke_hui" />

                <TextView
                    android:id="@+id/joke_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/joke"
                    android:textColor="@color/color_8a8a8a"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu_layout"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/menu_image"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/menu_hui" />

                <TextView
                    android:id="@+id/menu_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/menu"
                    android:textColor="@color/color_8a8a8a"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/me_layout"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/me_image"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/touxiang_hui" />

                <TextView
                    android:id="@+id/me_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/me"
                    android:textColor="@color/color_8a8a8a"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
