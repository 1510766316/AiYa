<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.wgx.com.aiYa">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name="app.wgx.com.aiYa.MyApplication"
        android:theme="@style/AppTheme.Base">
        <activity
            android:name="app.wgx.com.aiYa.activities.LoadingActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="app.wgx.com.aiYa.activities.IntroActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="app.wgx.com.aiYa.activities.main.MainActivity"
            android:screenOrientation="portrait" />

        <receiver android:name="app.wgx.com.aiYa.reveivers.MyReveiver" />
        <service android:name="app.wgx.com.aiYa.service.CheckAppService" />
    </application>

</manifest>